
#:import utils kivy.utils

<EndLoseWindow>: 
      
    GridLayout:
        cols: 1

        Label:        
            text: 'Derrota'
            font_size: 100

            canvas.before:
                Color:
                    rgba: 0.808, 0.125, 0.161, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        GridLayout:
            cols: 2

            Button:
                text: 'In√≠cio'
                background_color: utils.get_color_from_hex('#0000FF')
                font_size: 100

                on_press: 
                    app.root.current = 'StartWindow'
            Button:
                text: 'Sair'
                background_color: utils.get_color_from_hex('FF0000')
                font_size: 100

                on_press: 
                    app.stop()     